@model UserRoleViewModel

@{
    var roleId = ViewBag.roleId;
}

<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Add or remover users from role @Model.RoleName</h2>
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Users.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.Users[i].UserId" />
                    <input type="hidden" asp-for="@Model.Users[i].UserName" />
                    <input asp-for="@Model.Users[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model.Users[i].IsSelected" class="form-check-label">
                        @Model.Users[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
            <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-secondary" style="width:auto">Back</a>
        </div>
    </div>
</form>